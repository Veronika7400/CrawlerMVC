@model List<WebApiCrawler.Models.WebStore>
@{
    ViewData["Title"] = "Specific Store Search Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Specific Store Search Page</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/searchPage.css">
    <style>
        body {
            background-image: url('@Url.Content("~/images/SpecificStore.jpg")');
        }
    </style>

</head>
<body>
    <div class="container search-container">
        <h1>Specific Store Search Page</h1>
        <h4>
            Tell us what you're looking for, and we'll uncover the best deals <br />
            from specific store for your desired product
        </h4>
        <br />

        <form action="/Price/ProductListSpecificStore" method="GET" class="d-flex justify-content-center align-items-center flex-wrap">
            <div class="form-group mb-2">
                <select name="store" class="form-control">
                    <option value="">Select Store</option>
                    @foreach (var store in Model)
                    {
                        <option value="@store.Id">@store.Name</option>
                    }
                </select>
            </div>

            <div class="form-group mb-2">
                <input type="text" class="form-control" name="searchWord" placeholder="Enter your search query" value="@ViewData["SearchWord"]">
            </div>

            <button type="submit" class="mb-2">Search</button>
        </form>
    </div>
</body>
</html>